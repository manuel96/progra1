#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;
void main ()
{
	float altura, base, area;
	cout<<"ingrese altura";
    cin>> altura;
	cout<<"ingrese base";
	cin>> base;
	area= (base*altura)/2;
	cout<<"el area es: " <<area;
	getch();
}
