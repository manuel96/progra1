// ecuacion cuadratica.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <math.h>
using namespace std;
void main ()
{
 float a, b, c, d, x1, x2 ;
 cout<<"resolver ecuacion cuatratica"<<endl;
 cout<<"de el valor de a: ";
 cin>>a;
 cout<<"de el valor de b: ";
 cin>>b;
 cout<<"de el valor de c: ";
 cin>>c;
 if(a<0 & c<0)
 { 
	 cout<<"no se puede resolver debido a la raiz imaginaria";
 }
 else 
 {
	x1=-b+sqrtf(b*b-4*a*c)/2*a;
	x2=-b-sqrtf(b*b-4*a*c)/2*a;
	 cout<<"el valor de x1 es: "<<x1<<endl;
	 cout<<"el valor de x2 es: "<<x2;
 }
 getch();
}


